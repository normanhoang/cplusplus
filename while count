// character count, using while loop

#include <stdio.h>

int main()
{
	int char_count = 0;
	int word_count = 0;
	int newline_count = 0;
	int word_flip = 0;
	char c = 0;

	printf("Enter characters: ");

	while (true) 
	{
		c = getchar();

		if (int(c) == 4)
			break;
		char_count++;

		if (int(c) == 32)
		{
			word_flip = 0;
		}
		else {
			if (word_flip == 0) 
			{
				word_count++;
				word_flip = 1;
			}
		}

		if (int(c) == 10) {
			newline_count++;
		}

		//printf("Character entered: %d\n", int(c));
		//putchar(c);
	}

	printf("Character count is: %d\n", char_count);
	printf("Word count is: %d\n", word_count);
	printf("Newline count is: %d\n", newline_count);
	return(0);
}
