// farenheit to celsius, using while

#include <stdio.h>


int main()
{
	float start_f = 0; // enter starting farenheit here
	float end_f = 300; // enter ending farenheit here
	int step = 20; // enter step size here
	float c;

	printf("Farenheit     Celsius\n");
	while (start_f <= end_f) {
		c = (5.0 / 9.0) * (start_f - 32.0);
		printf("%3.0f       %10.1f\n", start_f, c);
		start_f += step;
	}
	return(0);
}
